<% provide(:title, 'Cadastro') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@funcionario, url: signup_path) do |f| %>
      <%= f.label :matricula %>
      <%= f.text_field :matricula %>

      <%= f.label :nome %>
      <%= f.text_field :nome %>
      
        <%= f.label :celular %>
      <%= f.text_field :celular %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Criar funcionario", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>